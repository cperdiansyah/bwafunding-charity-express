<!DOCTYPE html>
<html>
  <head>
    <title>HTML content</title>
    <style>
      <%=styles %>
    </style>
  </head>

  <body>
    <!-- Header -->
    <section class="header">
      <img
        src="https://amalkita.vercel.app/images/logo_revisi.png"
        alt="logo-image"
        class="header-logo"
      />
      <div class="header-title-wrapper">
        <h1 class="header-title">AmalKita</h1>
        <p class="header-subtitle">
          Jl. Masjid An-Nur III No.28, Kel. Grogol Selatan, Jakarta Selatan
        </p>
      </div>
    </section>

    <!-- campaign Data -->

    <section class="campaign-info">
      <div class="campaign-header">
        <span class="campaign-info-title campaign-header-title"
          >Campaign Info</span
        >

        <!-- campaign Data
        
        <span class="campaign-info-subtitle campaign-header-date">
          <%= dateNow %></span
        >
        
         -->
      </div>

      <table class="table">
        <tbody>
          <tr>
            <td class="table-title">Campaign Name</td>
            <td class="table-content"><%= campaign.title %></td>
          </tr>
          <tr style="height: 23.5px">
            <td class="table-title">Sedekah Subuh Period</td>
            <td class="table-content">
              <span class="donation date"><%= startDate %> s/d <%= endDate %></span>
            </td>
          </tr>
          <tr>
            <td class="table-title">Sedekah Subuh Collected</td>
            <td class="table-content"><%= donationFunded %></td>
          </tr>
          <tr>
            <td class="table-title">Total User Sedekah</td>
            <td class="table-content"><%= paymentData.meta.total %> User</td>
          </tr>
        </tbody>
      </table>
    </section>
  </body>
</html>
